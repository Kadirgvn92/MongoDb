@using MongoDb.DTOs.CustomerDTOs

@model List<ResultCustomerDTO>

@{
    ViewData["Title"] = "Index";
}


<table class="w-100">
    <tr>
        <th>Müşteri Adı</th>
        <th>Müşteri Telefon</th>
        <th>Müşteri Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Customer/CreateCustomer">Müşteri Oluştur</a>
