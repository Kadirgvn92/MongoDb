@using MongoDb.DTOs.ProductDTOs

@model List<ResultProductDTO>

@{
    ViewData["Title"] = "Index";
}

<br />
<table class="w-100">
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Adı</th>
        <th>Ürün Stok</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Resmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>

            <td>@item.Name</td>
            <td>@item.Stock</td>
            <td>@item.Price</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/CreateProduct">Product Oluştur</a>
